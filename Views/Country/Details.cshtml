@model Country

<div class="container mt-4">
    <h1 class="mb-3">@Model.Name</h1>
    <p class="mb-4">@Model.Description</p>

    <div class="row mb-5">
        <div class="col-12 col-md-6">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-sm" style="max-height: 300px; object-fit: cover;">
        </div>
    </div>

    <h3 class="mb-4">Cities</h3>
    <div class="row g-4">
        @foreach (City city in Model.Cities)
        {
            <div class="col-12 col-sm-6 col-md-4">
                <div class="card h-100 shadow-sm border-0" style="border-radius: 15px; background-color: blanchedalmond;">
                    <img src="@city.ImageUrl" class="card-img-top" alt="@city.Name"
                         style="height: 180px; object-fit: cover; border-top-left-radius: 15px; border-top-right-radius: 15px;">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@city.Name</h5>

                        <div class="mt-auto">
                            <div class="d-grid gap-2 mb-2">
                                <a asp-controller="City" asp-action="Details" asp-route-id="@city.Id"
                                   class="btn btn-primary">Details</a>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a asp-controller="City" asp-action="Edit" asp-route-id="@city.Id"
                                   class="btn btn-warning btn-sm">Edit</a>
                                <a asp-controller="City" asp-action="Delete" asp-route-id="@city.Id"
                                   class="btn btn-danger btn-sm">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
