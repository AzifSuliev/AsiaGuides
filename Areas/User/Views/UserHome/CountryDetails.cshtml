@model Country

<div class="container mt-4">
    <h1 class="mb-3">@Model.Name</h1>
    <p class="mb-4">@Model.Description</p>

    <div class="row mb-5">
        <div class="col-12 col-md-6">
            @if (string.IsNullOrEmpty(Model.ImageUrl))
            {
                string imageUrl = "/images/empty.png";
                <img src="@imageUrl" alt="@Model.Name" class="img-fluid rounded shadow-sm" style="max-height: 300px; object-fit: cover;">
            }
            else
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-sm" style="max-height: 300px; object-fit: cover;">
            }
        </div>
    </div>

    <h3 class="mb-4">Cities</h3>
    <div class="row g-4">
        @if (Model.Cities.Count == 0 || Model.Cities == null)
        {
            <h4 class="mb-4">Cities haven't been added yet</h4>
        }
        else foreach (City city in Model.Cities)
            {
                <div class="col-12 col-sm-6 col-md-4">
                    <a asp-area="User" asp-controller="UserHome" asp-action="CityyDetails" asp-route-id="@city.Id" style="color:black; text-decoration: none">
                        <div class="card m-4 shadow-sm border-0" style="border-radius: 15px; height: 250px; background-color: greenyellow;">
                            <img src="@city.ImageUrl" class="card-img-top" alt="@city.Name"
                                 style="height: 180px; object-fit: cover; border-radius: 10px">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@city.Name</h5>
                            </div>
                        </div>
                    </a>
                </div>
            }
    </div>
</div>