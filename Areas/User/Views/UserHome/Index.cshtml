@model List<Country>

<div class="row">
    @foreach (Country country in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-4">
            <div class="card" style="width: 20rem; height: 300px; background-color:blanchedalmond; border-radius: 15px">
                @if (string.IsNullOrEmpty(country.ImageUrl))
                {
                    string imageUrl = "/images/empty.png";
                    <img src="@imageUrl" class="card-img-top" alt="@country.Name"
                         style="object-fit: cover; height: 150px">
                }
                else
                {
                    <img src="@country.ImageUrl" class="card-img-top" alt="@country.Name"
                         style="object-fit: cover; height: 150px">
                }
                <div class="card-body">
                    <h5 class="card-title">@country.Name</h5>

                    <div class="d-flex justify-content-end mt-3 mb-3 ms-3" style="width: 215px">
                        <a asp-area="User" asp-controller="UserHome" asp-action="CountryDetails" asp-route-id="@country.Id"
                           class="btn btn-primary me-3 w-100" style="height: 40px;">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>